<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <%= link_to volunteer_availabilities_path, class: "inline-flex items-center gap-1 text-purple-600 hover:text-purple-800 text-sm font-medium" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Availability
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Add Availability</h1>

    <%= form_with model: [:volunteer, @availability], class: "space-y-6" do |f| %>
      <% if @availability.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
          <ul class="list-disc list-inside text-sm">
            <% @availability.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :day_of_week, "Day", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :day_of_week, Availability.day_of_weeks.keys.map { |d| [d.capitalize, d] }, 
            { prompt: "Select a day" }, 
            class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :start_time, "Start Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.time_field :start_time, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition" %>
        </div>

        <div>
          <%= f.label :end_time, "End Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.time_field :end_time, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition" %>
        </div>
      </div>

      <div class="flex items-center gap-3 pt-4">
        <%= f.submit "Save Availability", class: "inline-flex items-center gap-2 bg-purple-600 text-white px-6 py-2.5 rounded-lg font-medium hover:bg-purple-700 transition cursor-pointer" %>
        <%= link_to "Cancel", volunteer_availabilities_path, class: "inline-flex items-center gap-2 bg-gray-100 text-gray-700 px-6 py-2.5 rounded-lg font-medium hover:bg-gray-200 transition" %>
      </div>
    <% end %>
  </div>
</div>