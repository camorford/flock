<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <%= link_to "â† Back to Availability", volunteer_availabilities_path, class: "text-blue-600 hover:underline" %>
  </div>

  <h1 class="text-2xl font-bold mb-6">Add Availability</h1>

  <%= form_with model: [:volunteer, @availability], class: "space-y-4" do |f| %>
    <% if @availability.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul>
          <% @availability.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :day_of_week, "Day", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :day_of_week, Availability.day_of_weeks.keys.map { |d| [d.capitalize, d] }, 
          { prompt: "Select a day" }, 
          class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :start_time, "Start Time", class: "block text-sm font-medium text-gray-700" %>
        <%= f.time_field :start_time, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :end_time, "End Time", class: "block text-sm font-medium text-gray-700" %>
        <%= f.time_field :end_time, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
    </div>

    <div class="flex gap-2">
      <%= f.submit "Save Availability", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancel", volunteer_availabilities_path, class: "bg-gray-200 px-4 py-2 rounded hover:bg-gray-300" %>
    </div>
  <% end %>
</div>