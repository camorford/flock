<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">My Availability</h1>
    <%= link_to "Add Availability", new_volunteer_availability_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>

  <% if @availabilities.any? %>
    <div class="bg-white shadow rounded-lg divide-y">
      <% @availabilities.each do |availability| %>
        <div class="p-4 flex justify-between items-center">
          <div>
            <span class="font-semibold"><%= availability.day_of_week.capitalize %></span>
            <span class="text-gray-600 ml-2">
              <%= availability.start_time.strftime("%l:%M %p") %> - <%= availability.end_time.strftime("%l:%M %p") %>
            </span>
          </div>
          <%= button_to "Remove", volunteer_availability_path(availability), method: :delete,
              data: { turbo_confirm: "Remove this availability?" },
              class: "text-red-600 hover:underline text-sm" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-6">
      <p class="text-gray-500">You haven't set any availability yet. Let your team know when you're free to serve!</p>
    </div>
  <% end %>
</div>