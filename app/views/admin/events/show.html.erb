<div class="max-w-5xl mx-auto py-8 px-4">
  <div class="mb-6">
    <%= link_to admin_events_path, class: "inline-flex items-center gap-1 text-purple-600 hover:text-purple-800 text-sm font-medium" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Events
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6">
    <div class="flex justify-between items-start">
      <div class="flex gap-4">
        <div class="w-16 h-16 bg-purple-100 rounded-xl flex flex-col items-center justify-center text-purple-700">
          <span class="text-sm font-medium uppercase"><%= @event.starts_at.strftime("%b") %></span>
          <span class="text-2xl font-bold leading-none"><%= @event.starts_at.strftime("%d") %></span>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @event.name %></h1>
          <p class="text-gray-500 mt-1">
            <%= @event.team.name %> â€¢ <%= @event.starts_at.strftime("%A, %B %d, %Y") %>
          </p>
          <p class="text-gray-400 text-sm mt-1">
            <%= @event.starts_at.strftime("%l:%M %p") %> - <%= @event.ends_at.strftime("%l:%M %p") %>
          </p>
        </div>
      </div>
      <div class="flex items-center gap-2">
        <%= link_to edit_admin_event_path(@event), class: "inline-flex items-center gap-2 bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium hover:bg-gray-200 transition text-sm" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit
        <% end %>
        <%= button_to admin_event_path(@event), method: :delete, 
            data: { turbo_confirm: "Are you sure you want to delete this event?" },
            class: "inline-flex items-center gap-2 bg-red-50 text-red-600 px-4 py-2 rounded-lg font-medium hover:bg-red-100 transition text-sm" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold text-gray-900">Assignments</h2>
      <%= link_to new_admin_event_assignment_path(@event), class: "inline-flex items-center gap-2 bg-purple-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-purple-700 transition text-sm" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Assignment
      <% end %>
    </div>

    <% if @assignments.any? %>
      <div class="divide-y divide-gray-100">
        <% @assignments.each do |assignment| %>
          <div class="py-4 flex justify-between items-center">
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                <span class="text-purple-700 font-semibold text-sm"><%= assignment.user.display_name.first(2).upcase %></span>
              </div>
              <div>
                <p class="font-medium text-gray-900"><%= assignment.user.display_name %></p>
                <p class="text-sm text-gray-500"><%= assignment.position.name %></p>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= assignment_status_class(assignment) %>">
                <%= assignment.status.capitalize %>
              </span>
              <%= button_to admin_event_assignment_path(@event, assignment), method: :delete,
                  data: { turbo_confirm: "Remove this assignment?" },
                  class: "text-red-500 hover:text-red-700 text-sm font-medium" do %>
                Remove
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <p class="text-gray-500">No one assigned yet. Add volunteers to this event.</p>
      </div>
    <% end %>
  </div>
</div>