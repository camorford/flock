<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <%= link_to admin_team_path(@team), class: "inline-flex items-center gap-1 text-purple-600 hover:text-purple-800 text-sm font-medium" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to <%= @team.name %>
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Add Position to <%= @team.name %></h1>

    <%= form_with model: [:admin, @team, @position], class: "space-y-6" do |f| %>
      <% if @position.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
          <ul class="list-disc list-inside text-sm">
            <% @position.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition", placeholder: "e.g. Lead Vocals, Sound Tech, Greeter" %>
      </div>

      <div class="flex items-center gap-3 pt-4">
        <%= f.submit "Add Position", class: "inline-flex items-center gap-2 bg-purple-600 text-white px-6 py-2.5 rounded-lg font-medium hover:bg-purple-700 transition cursor-pointer" %>
        <%= link_to "Cancel", admin_team_path(@team), class: "inline-flex items-center gap-2 bg-gray-100 text-gray-700 px-6 py-2.5 rounded-lg font-medium hover:bg-gray-200 transition" %>
      </div>
    <% end %>
  </div>
</div>