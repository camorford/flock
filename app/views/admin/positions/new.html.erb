<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <%= link_to "â† Back to #{@team.name}", admin_team_path(@team), class: "text-blue-600 hover:underline" %>
  </div>

  <h1 class="text-2xl font-bold mb-6">Add Position to <%= @team.name %></h1>

  <%= form_with model: [:admin, @team, @position], class: "space-y-4" do |f| %>
    <% if @position.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul>
          <% @position.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "e.g. Sound Tech, Lead Vocals" %>
    </div>

    <div class="flex gap-2">
      <%= f.submit "Add Position", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancel", admin_team_path(@team), class: "bg-gray-200 px-4 py-2 rounded hover:bg-gray-300" %>
    </div>
  <% end %>
</div>