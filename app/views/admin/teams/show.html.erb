<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="mb-6">
    <%= link_to "â† Back to Teams", admin_teams_path, class: "text-blue-600 hover:underline" %>
  </div>

  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="text-2xl font-bold"><%= @team.name %></h1>
      <p class="text-gray-600"><%= @team.description %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_team_path(@team), class: "bg-gray-200 px-4 py-2 rounded hover:bg-gray-300" %>
      <%= button_to "Delete", admin_team_path(@team), method: :delete, 
          data: { turbo_confirm: "Are you sure?" },
          class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold">Positions</h2>
      <%= link_to "Add Position", new_admin_team_position_path(@team), class: "text-blue-600 hover:underline text-sm" %>
    </div>

    <% if @positions.any? %>
      <ul class="divide-y">
        <% @positions.each do |position| %>
          <li class="py-2 flex justify-between items-center">
            <span><%= position.name %></span>
            <%= button_to "Remove", admin_team_position_path(@team, position), method: :delete,
                data: { turbo_confirm: "Remove this position?" },
                class: "text-red-600 hover:underline text-sm" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No positions yet.</p>
    <% end %>
  </div>
</div>