<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <%= link_to admin_teams_path, class: "inline-flex items-center gap-1 text-purple-600 hover:text-purple-800 text-sm font-medium" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Teams
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">New Team</h1>
    <%= render "form", team: @team %>
  </div>
</div>