<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Teams</h1>
    <%= link_to "New Team", new_admin_team_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>

  <% if @teams.any? %>
    <div class="bg-white shadow rounded-lg divide-y">
      <% @teams.each do |team| %>
        <div class="p-4 flex justify-between items-center">
          <div>
            <h2 class="font-semibold"><%= team.name %></h2>
            <p class="text-gray-600 text-sm"><%= team.description %></p>
          </div>
          <div class="flex gap-2">
            <%= link_to "View", admin_team_path(team), class: "text-blue-600 hover:underline" %>
            <%= link_to "Edit", edit_admin_team_path(team), class: "text-gray-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No teams yet. Create your first one!</p>
  <% end %>
</div>