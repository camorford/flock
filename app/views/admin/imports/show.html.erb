<div class="max-w-5xl mx-auto py-8 px-4">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Import from Planning Center</h1>
    <p class="text-gray-500 mt-1">Sync your teams, volunteers, and events from Planning Center</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900">Teams</h2>
      </div>
      
      <% if @pco_teams.any? %>
        <div class="space-y-2 mb-6 max-h-64 overflow-y-auto">
          <% @pco_teams.each do |team| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <span class="text-gray-900 text-sm"><%= team[:name] %></span>
              <% if Team.exists?(name: team[:name]) %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                  Imported
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= button_to create_teams_admin_import_path, class: "w-full inline-flex items-center justify-center gap-2 bg-purple-600 text-white px-5 py-2.5 rounded-lg font-medium hover:bg-purple-700 transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
          </svg>
          Import Teams
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <p class="text-gray-500">No teams found.</p>
        </div>
      <% end %>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900">People</h2>
      </div>
      
      <% if @pco_people.any? %>
        <div class="space-y-2 mb-6 max-h-64 overflow-y-auto">
          <% @pco_people.each do |person| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <div>
                <p class="text-gray-900 text-sm"><%= person[:name] %></p>
                <p class="text-gray-500 text-xs"><%= person[:email] %></p>
              </div>
              <% if person[:email].present? && User.exists?(email_address: person[:email]) %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                  Imported
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= button_to create_people_admin_import_path, class: "w-full inline-flex items-center justify-center gap-2 bg-purple-600 text-white px-5 py-2.5 rounded-lg font-medium hover:bg-purple-700 transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
          </svg>
          Import People
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <p class="text-gray-500">No people found.</p>
        </div>
      <% end %>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900">Events</h2>
      </div>
      
      <% if @pco_plans.any? %>
        <div class="space-y-2 mb-6 max-h-64 overflow-y-auto">
          <% @pco_plans.each do |plan| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <div>
                <p class="text-gray-900 text-sm"><%= plan[:name] %></p>
                <p class="text-gray-500 text-xs"><%= plan[:service_type] %> â€¢ <%= Date.parse(plan[:starts_at]).strftime("%b %d, %Y") if plan[:starts_at] %></p>
              </div>
              <% if plan[:starts_at].present? && Event.joins(:team).exists?(name: plan[:name], teams: { name: plan[:team_name] }) %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                  Imported
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= button_to create_events_admin_import_path, class: "w-full inline-flex items-center justify-center gap-2 bg-purple-600 text-white px-5 py-2.5 rounded-lg font-medium hover:bg-purple-700 transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
          </svg>
          Import Events
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <p class="text-gray-500">No events found.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>